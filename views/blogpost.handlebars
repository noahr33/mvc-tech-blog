<div class="border border-dark border-3 w-75 m-auto mt-5 rounded">
  <div class="bg-primary border-bottom border-3 border-dark text-light">
    <h1 class="px-3 pt-2">{{blog_title}}</h1>
    <p class="fs-6 px-3">Posted by {{"user.username"}} on {{format_date date_created}}</p>
  </div>
  <div>
    <p class="p-3">{{content}}</p>
  </div>
</div>
<div class="border border-dark border-3 border-top-0 w-75 m-auto rounded text-center p-3">
  <textarea name="" id="textAreaInput" class="form-control" rows="3" placeholder="Leave a comment here..."></textarea>
  <button type="button" class="btn btn-primary m-1 text-center">Comment</button>
</div>
<div class="container">
  <p>{{comment_content}}</p>
</div>
<script src="/js/leaveComment.js"></script>